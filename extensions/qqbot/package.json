{
  "name": "@sliverp/qqbot",
  "version": "1.3.7",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "qqbot": "./bin/qqbot-cli.js"
  },
  "files": [
    "dist",
    "bin",
    "src",
    "index.ts",
    "tsconfig.json",
    "openclaw.plugin.json"
  ],
  "clawdbot": {
    "extensions": ["./index.ts"]
  },
  "moltbot": {
    "extensions": ["./index.ts"]
  },
  "openclaw": {
    "extensions": ["./index.ts"],
    "channel": {
      "id": "qqbot",
      "label": "QQ Bot",
      "selectionLabel": "QQ Bot (QQ Open Platform)",
      "detailLabel": "QQ Bot",
      "docsPath": "/channels/qqbot",
      "docsLabel": "qqbot",
      "blurb": "Connect to QQ via official QQ Bot API with streaming support.",
      "order": 36,
      "quickstartAllowFrom": true
    },
    "install": {
      "npmSpec": "@sliverp/qqbot",
      "localPath": "extensions/qqbot",
      "defaultChoice": "local"
    }
  },
  "scripts": {
    "build": "tsc || true",
    "dev": "tsc --watch",
    "prepack": "npm install --omit=dev"
  },
  "dependencies": {
    "ws": "^8.18.0"
  },
  "bundledDependencies": [
    "ws"
  ],
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "clawdbot": "*",
    "moltbot": "*",
    "openclaw": "*"
  },
  "homepage": "https://github.com/sliverp/qqbot"
}
